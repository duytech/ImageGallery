@model ImageGallery.Web.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login page</h2>
<div>
    @using (Html.BeginForm("SignIn", "User", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    @Html.Label("User Name")
                </td>
                <td>
                    @Html.TextBoxFor(user => user.Name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Password")
                </td>
                <td>
                    @Html.PasswordFor(user => user.Password)
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="btnSubmit" value="Sign In" />
                </td>
            </tr>
        </table>
    }
</div>

